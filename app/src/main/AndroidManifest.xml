<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ca.jcsoftware.serenity">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_serenity_layer"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_serenity"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".controller.Vault">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SecretAdapter" />
        <activity android:name=".controller.SecretController" />
        <activity android:name=".CreateSecret" />
        <activity android:name=".EditSecret"></activity>
    </application>

</manifest>